{
  "layer": "top",
  "position": "top",
  "margin": "6 10 0 10",
  "modules-left": ["hyprland/workspaces", ],
  "modules-center": ["hyprland/window", ],
  "modules-right": [
	"cpu",
	"memory",
    "pulseaudio",
    "network",
	"clock",
    "tray",
  ],

  // Left section
  "hyprland/workspaces": {
	  "actice-only": true,
    "disable-scroll": true,
    "all-outputs": false,
    "on-click": "activate",
    "format": "{id}{icon}",
    "format-icons": {
      "1": " 󰖟",
      "2": " ",
	  "default": "",
    }
  },

  "hyprland/window": {
    "format": "{title}",
    "max-length": 60
  },

  // Center section
  "clock": {
    "format": "{:%a %d %b %H:%M}",
    "tooltip-format": "{:%Y-%m-%d %H:%M:%S}"
  },

  // Right section
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "󰝟",
    "format-icons": {
      "default": [
        "",
        "",
        ""
      ]
    },
    "on-click": "pavucontrol"
  },

  "network": {
    "format-wifi": " {essid} ({signalStrength}%)",
    "format-ethernet": "󰈀 {ifname}",
    "format-disconnected": "󰖪 disconnected"
  },

  "tray": {
    "icon-size": 14,
    "spacing": 5
  },

  "custom/power": {
    "format": "",
    "on-click": "wlogout"
  },

  "cpu": {
	  "interval": 2,
	  "format": "󰻠 {usage}%",
	  "tooltip": true,
	  "on-click": "ghostty -e btop"
  },
  "network": {
	  "format-wifi": " {essid} ↓{bandwidthDownBits} ↑{bandwidthUpBits}",
	  "format-ethernet": "󰈀 ↓{bandwidthDownBits} ↑{bandwidthUpBits}",
	  "format-disconnected": "󰖪 disconnected",
	  "interval": 2,
	  "tooltip": true
	},
	"memory": {
	  "interval": 5,
	  "format": " {percentage}%",
	  "on-click": "alacritty -e btop"
	}


}
